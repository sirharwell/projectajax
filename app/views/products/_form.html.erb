<div id="product-form">
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :base_price %>
    <%= f.text_field :base_price %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :quantity_on_hand %>
    <%= f.text_field :quantity_on_hand %>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <%= f.label :weight %>
    <%= f.text_field :weight %>
    <%= f.label :other_attributes %>
    <%= f.text_field :other_attributes %>
    <%= f.submit %>
  <% end %>
</div>
